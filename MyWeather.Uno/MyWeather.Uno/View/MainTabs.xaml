<!-- Migration note: TabbedPage → Pivot control
     Reference: https://learn.microsoft.com/en-us/windows/apps/develop/ui/controls/pivot
     Pivot provides touch-swiping between content sections, closest to Xamarin.Forms TabbedPage -->
<Page x:Class="MyWeather.Uno.View.MainTabs"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:views="using:MyWeather.Uno.View"
      xmlns:viewmodels="using:MyWeather.Uno.ViewModels">
    
    <Page.DataContext>
        <viewmodels:WeatherViewModel/>
    </Page.DataContext>

    <Pivot Title="My Weather" Margin="0,40,0,0">
        <PivotItem Header="Weather">
            <views:WeatherView DataContext="{Binding}"/>
        </PivotItem>
        <PivotItem Header="Forecast">
            <views:ForecastView DataContext="{Binding}"/>
        </PivotItem>
    </Pivot>
</Page>
