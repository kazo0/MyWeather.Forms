<Page x:Class="MyWeatherApp.UnoFull.Presentation.AppShell"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:MyWeatherApp.UnoFull.Presentation"
      xmlns:uen="using:Uno.Extensions.Navigation.UI"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:um="using:Uno.Material"
      uen:Region.Attached="True"
      uen:Region.Name="Shell"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <!-- TabBar navigation - bottom tabs on mobile -->
        <utu:TabBar uen:Region.Attached="True"
                    uen:Region.Navigator="Visibility"
                    Background="{ThemeResource SurfaceBrush}"
                    VerticalAlignment="Bottom">
            
            <!-- Weather Tab -->
            <utu:TabBar.Items>
                <utu:TabBarItem Content="Weather"
                                uen:Region.Name="Weather">
                    <utu:TabBarItem.Icon>
                        <FontIcon Glyph="&#xE753;"/>
                    </utu:TabBarItem.Icon>
                </utu:TabBarItem>

                <!-- Forecast Tab -->
                <utu:TabBarItem Content="Forecast"
                                uen:Region.Name="Forecast">
                    <utu:TabBarItem.Icon>
                        <FontIcon Glyph="&#xE7C4;"/>
                    </utu:TabBarItem.Icon>
                </utu:TabBarItem>
            </utu:TabBar.Items>
        </utu:TabBar>
    </Grid>
</Page>
