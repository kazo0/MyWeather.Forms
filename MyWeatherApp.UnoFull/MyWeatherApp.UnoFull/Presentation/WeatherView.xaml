<Page x:Class="MyWeatherApp.UnoFull.Presentation.WeatherView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:MyWeatherApp.UnoFull.Presentation"
      xmlns:uen="using:Uno.Extensions.Navigation.UI"
      xmlns:utu="using:Uno.Toolkit.UI"
      uen:Region.Attached="True"
      uen:Region.Name="Weather"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel Padding="16" 
                    Spacing="16" 
                    MaxWidth="600" 
                    HorizontalAlignment="Center">
            
            <!-- Location Input -->
            <TextBox x:Name="LocationTextBox"
                     Header="Location"
                     Text="{Binding Location, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     PlaceholderText="Enter city name"
                     Visibility="{Binding UseGPS, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>

            <!-- Use GPS Toggle -->
            <StackPanel Orientation="Horizontal" Spacing="12">
                <TextBlock Text="Use GPS" 
                           VerticalAlignment="Center"
                           Style="{StaticResource BodyTextBlockStyle}"/>
                <ToggleSwitch IsOn="{Binding UseGPS, Mode=TwoWay}" 
                              OnContent="" 
                              OffContent=""
                              HorizontalAlignment="Right"/>
            </StackPanel>

            <!-- Use Imperial Toggle -->
            <StackPanel Orientation="Horizontal" Spacing="12">
                <TextBlock Text="Use Imperial" 
                           VerticalAlignment="Center"
                           Style="{StaticResource BodyTextBlockStyle}"/>
                <ToggleSwitch IsOn="{Binding IsImperial, Mode=TwoWay}" 
                              OnContent="" 
                              OffContent=""
                              HorizontalAlignment="Right"/>
            </StackPanel>

            <!-- Get Weather Button -->
            <Button Content="Get Weather" 
                    Command="{Binding GetWeatherCommand}"
                    HorizontalAlignment="Stretch"
                    Style="{StaticResource AccentButtonStyle}"/>

            <!-- Temperature Display -->
            <TextBlock Text="{Binding Temp}" 
                       FontSize="32"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       Margin="0,16,0,0"/>

            <!-- Condition Display -->
            <TextBlock Text="{Binding Condition}" 
                       FontSize="20"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       TextAlignment="Center"/>

            <!-- Loading Indicator -->
            <ProgressRing IsActive="{Binding IsBusy}" 
                          Width="48" 
                          Height="48"
                          HorizontalAlignment="Center"
                          Margin="0,16,0,0"
                          Visibility="{Binding IsBusy}"/>
        </StackPanel>
    </ScrollViewer>
</Page>
